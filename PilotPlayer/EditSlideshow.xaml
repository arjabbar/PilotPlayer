<Window x:Class="PilotPlayer.EditSlideshow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Slideshow" Height="233" Width="525" xmlns:my="clr-namespace:PilotPlayer" Loaded="Window_Loaded" >
    <Window.Resources>
        <CollectionViewSource x:Key="mediaViewSource" Source="{Binding Path=Media, Source={StaticResource pPDBDataSet}}" />
    </Window.Resources>
    <Grid Height="202" DataContext="{StaticResource mediaViewSource}" Width="507">
        <Button Content="Delete" Height="23" HorizontalAlignment="Left" Margin="418,167,0,0" Name="btnDelete" VerticalAlignment="Top" Width="75" Click="btnDelete_Click" />
        <ListView Height="178" HorizontalAlignment="Left" Margin="7,12,0,0" Name="MediaList" VerticalAlignment="Top" Width="405" DisplayMemberPath="FilePath" ItemsSource="{Binding Path=FileName}" SelectedValuePath="MediaID" SelectionMode="Single" DataContext="{Binding Path=FileName}">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Width="400" Header="Media Name" DisplayMemberBinding="{Binding Path=FileName}" />
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
